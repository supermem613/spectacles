{
	"name": "spectacles",
	"publisher": "supermem613",
	"displayName": "Spectacles",
	"icon": "resources/spectacles-color.png",
	"description": "Visual Studio Code Extension for Log Analysis and Visualization of Microsoft ULS / Test Logs",
	"version": "0.0.9",
	"license": "MIT",
	"engines": {
		"vscode": "^1.74.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/supermem613/spectacles"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:sidebar",
		"onLanguage:ULS"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "spectacles",
					"title": "Spectacles",
					"icon": "resources/spectacles.svg"
				}
			]
		},
		"views": {
			"spectacles": [
				{
					"id": "sidebar",
					"name": "Sidebar"
				}
			]
		},
		"languages": [
			{
				"id": "ULS",
				"extensions": [
					".log"
				],
				"aliases": [
					"ULS",
					"uls"
				],
				"filenames": [],
				"firstLine": "^#!/.*\\bTimestamp\\b",
				"configuration": "./uls.language-configuration.json"
			}
		],
		"commands": [],
		"grammars": [
			{
				"language": "ULS",
				"scopeName": "text.spectacles.uls",
				"path": "./syntaxes/uls.tmLanguage.json"
			}
		],
		"configuration": [
			{
				"title": "Spectacles",
				"properties": {
					"spectacles.errorRegex": {
						"type": "string",
						"default": "csierr[_a-zA-Z]*|cellerr[_a-zA-Z]*",
						"description": "Regular expression used to match errors in the log."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.11.15",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"chai": "^4.3.7",
		"eslint": "^8.29.0",
		"expect": "^29.3.1",
		"glob": "^8.0.3",
		"lodash": ">=4.17.21",
		"mocha": "^10.2.0",
		"moment": "^2.29.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"vscode-test": "^1.3.0",
		"y18n": ">=5.0.8"
	},
	"dependencies": {
		"expect": "^29.3.1"
	}
}
