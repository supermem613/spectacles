{
	"name": "spectacles",
	"publisher": "supermem613",
	"displayName": "Spectacles",
	"icon": "resources/spectacles-color.svg",
	"description": "Visualizer for Logs",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:errorsList",
		"onLanguage:ULS",
		"onCommand:spectacles.trim"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "spectacles",
					"title": "Spectacles",
					"icon": "resources/spectacles.svg"
				}
			]
		},
		"views": {
			"spectacles": [
				{
					"id": "errorList",
					"name": "Error List"
				}
			]
		},
		"languages": [
			{
			  "id": "ULS",
			  "extensions": [".log"],
			  "aliases": ["ULS", "uls"],
			  "filenames": [],
			  "firstLine": "^#!/.*\\bTimestamp\\b",
			  "configuration": "./uls.language-configuration.json"
			}
		],
		"commands": [
			{
				"command": "spectacles.trim",
				"title": "Trim Log Lines"
			},
			{
				"command": "errorList.goto",
				"title": "Goto",
				"icon": {
				  "light": "resources/light/goto.svg",
				  "dark": "resources/dark/goto.svg"
				}
			}
		],
		"grammars": [
			{
				"language": "ULS",
				"scopeName": "text.spectacles.uls",
				"path": "./syntaxes/uls.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
