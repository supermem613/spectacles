{
	"name": "spectacles",
	"publisher": "supermem613",
	"displayName": "Spectacles",
	"icon": "resources/spectacles-color.png",
	"description": "Visual Studio Code Extension for Log Analysis and Visualization of Microsoft ULS / Test Logs",
	"version": "0.0.14",
	"license": "MIT",
	"engines": {
		"vscode": "^1.106.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/supermem613/spectacles"
	},
	"categories": [
		"Other"
	],

	"main": "./out/extension.js",
	"activationEvents": [
		"onView:sidebar",
		"onLanguage:ULS"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "spectacles",
					"title": "Spectacles",
					"icon": "resources/spectacles.svg"
				}
			]
		},
		"views": {
			"spectacles": [
				{
					"id": "sidebar",
					"name": "Sidebar",
					"icon": "resources/spectacles.svg"
				}
			]
		},
		"languages": [
			{
				"id": "ULS",
				"extensions": [
					".log"
				],
				"aliases": [
					"ULS",
					"uls"
				],
				"filenames": [],
				"firstLine": "^#!/.*\\bTimestamp\\b",
				"configuration": "./uls.language-configuration.json"
			}
		],
		"commands": [],
		"grammars": [
			{
				"language": "ULS",
				"scopeName": "text.spectacles.uls",
				"path": "./syntaxes/uls.tmLanguage.json"
			}
		],
		"configuration": [
			{
				"title": "Spectacles",
				"properties": {
					"spectacles.errorRegex": {
						"type": "string",
						"default": "csierr[_a-zA-Z]*|cellerr[_a-zA-Z]*",
						"description": "Regular expression used to match errors in the log."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "echo \"skip lint\"",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^5.2.3",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.1",
		"@types/vscode": "^1.106.1",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"chai": "^6.2.1",
		"eslint": "^9.39.1",
		"expect": "^30.2.0",
		"glob": "^12.0.0",
		"lodash": ">=4.17.21",
		"mocha": "^11.7.5",
		"moment": "^2.30.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"vscode-test": "^1.6.1",
		"y18n": ">=5.0.8"
	},
	"dependencies": {
		"expect": "^30.2.0"
	}
}
